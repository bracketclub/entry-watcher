{
  "parser": "espree",

  "ecmaFeatures": {
    "arrowFunctions": true,
    "binaryLiterals": true,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "destructuring": true,
    "objectLiteralComputedProperties": true,
    "objectLiteralDuplicateProperties": true,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    "restParams": true,
    "spread": true,
    "templateStrings": true
  },

  "extends": "@lukekarrys/eslint-config",

  "rules": {
    "strict": [2, "global"],
    "no-new": 0,
    "no-magic-numbers": 0,
    "camelcase": 0
  },

  "globals": {
    "describe": false,
    "it": false
  }
}
